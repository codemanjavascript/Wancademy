<style>
    .jumbotron{
background: url(https://i.imgur.com/WOv6Avj.png);
        height:380px;
    }
    .explore-title{
   font-family: 'Raleway', sans-serif;
   font-weight:100;
}
.explore-sub-title{
  font-family: 'Raleway', sans-serif;
   font-weight:100;
}
</style>
<div class="jumbotron">
 
    <br><br>
    <h1 style="text-align:center;color:white;font-weight: 900;font-size:85px;">
       OWN your curiosity
    </h1>
   <br>
   <div style="text-align:center;">
   <input style="text-align:center;width:50%" placeholder="Search All Courses ðŸ”Ž">
   </div> 
   <br>


</div>

<div class="container">
    <h1 style="font-size:55px;"><span style="color:#00A6FF;"><strong>Educator</strong></span> Created Courses</h1>
    <hr>
    <div class="card-deck">    
        <% courses.forEach(function(course){ %>
        <div class="col-md-4">
          <div class="card">
            <a href="/courses/<%= course._id %>"><img class="card-img-top" src="<%= course.image %>" alt="Card image cap"></a>
            <div class="card-body">
              <a href="/courses/<%= course._id %>" style="color:black;text-decoration:none;font-size:22px;" class="card-title"><strong><%= course.name %></strong></a>
              <p class="card-text"><%= course.description.substring(0, 60) %><a href="/courses/<%= course._id %>" style="font-weight:900;">...View Course</a></p>
              <a href="/courses/<%= course._id %>" style="color:black;text-decoration:none;" class="button-11" role="button"> View Course </a>
              <br><br>
              <p class="card-text"><small class="text-muted">Created On <%= course.created.toDateString() %></small></p>
            </div>
          </div>
          </div>
        <% }); %>
    </div>
</div>

 
