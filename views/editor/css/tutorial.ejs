<script>
    
function update(){
            var res = document.getElementById("result").contentWindow.document;
            res.open();
            res.write(eh.getValue());
            //for css
            res.write('<style>'+ec.getValue()+'</style>');
           
            res.close();
        }
        
        function seteditor(){
            //HTML
            window.eh = ace.edit("htmleditor");
            eh.setTheme("ace/theme/cobalt");
            eh.session.setMode("ace/mode/html");
            //CSS
            window.ec = ace.edit("csseditor");
            ec.setTheme("ace/theme/merbivore");
            ec.session.setMode("ace/mode/css");
           
            eh.setValue(`<!DOCTYPE html>
<html>
    <body>
    
    </body>
</html>`,1); //1 = moves cursor to end
   eh.renderer.setScrollMargin(13, 3);
   
  eh.getSession().on('change', function() {
    update();
  });

  eh.focus();
  
  
  eh.setOptions({
    fontSize: "11pt",
    showLineNumbers: true,
    showGutter: true,
    autoScrollEditorIntoView: true,
    enableBasicAutocompletion: false, enableLiveAutocompletion: true
  });

  eh.setShowPrintMargin(false);
  eh.setBehavioursEnabled(false);


  ec.setValue(``,1); //1 = moves cursor to end
   ec.renderer.setScrollMargin(13, 3);
   
  ec.getSession().on('change', function() {
    update();
  });

  ec.focus();
  
  
  ec.setOptions({
    fontSize: "11pt",
    showLineNumbers: true,
    showGutter: true,
    autoScrollEditorIntoView: true,
    enableBasicAutocompletion: false, enableLiveAutocompletion: true
  });

  ec.setShowPrintMargin(false);
  ec.setBehavioursEnabled(false);


            eh.getSession().on("change", function(){
               update(); 
            });
            
            ec.getSession().on("change", function(){
               update(); 
            });
            
           
        }
        seteditor();
        update();
</script>