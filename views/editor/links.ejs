function Run(){
 var editor = ace.edit("editor");
 var Code = editor.getSession().getValue();
 var txt1 = document.getElementById("txt1").value;
 $('.nav-tabs a[href="#contact-tab"]').tab('show');


 if (Code.includes('<a','</a>','href')){
      $( "#checkbox" ).addClass( ".far fa-check-square" ).removeClass( ".far fa-square" );
      
        swal({
            title: "Good job!",
