<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/forums/<%= forum_id %>/answers/<%= answer._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="answer[text]" value="<%= answer.text %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/forums">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

