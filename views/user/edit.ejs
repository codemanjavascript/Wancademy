<% include ../partials/header %>

<div class="jumbotron" style="text-align:center;height:350px;background:#0051FF;">
    <br><br>
    <h1 style="font-weight:100;color:white;font-size:80px;">Profile Settings </h1>
    <br>
    <a class="btn btn-primary" href="/users/friends/<%= currentUser.id %>">Back to my profile</a>
</div>

<div class="container">
    <div class="row">
        <div style="width: 70%; margin: 25px auto; text-align:center;">
           <form action="/user/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input  type="text" name="username" value="<%= currentUser.username %>" placeholder="name">
                </div>
                <div class="form-group">
                    <input type="text" name="image" value="<%= currentUser.image %>" placeholder="Image URL">
                </div>
                <div class="form-group">
                    
                    <input type="text" name="description" placeholder="Description" value="<%= currentUser.description %>">
                </div>
                <br>
                 <div class="form-group">
                    <button class="btn btn-primary">Save Changes</button>
                    <a href="/themes/<%= currentUser.id %>/edit" class="btn btn-warning" style="color:white;">Edit Theme</a>
                    <a href="/delete-profile/confirm" class="btn btn-danger" style="color:white;">Delete Profile</a>
                </div>
            <br>
               
            </form>
           
    </div>
</div>
</div>
<% include ../partials/footer %>

