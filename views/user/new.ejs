<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <br><%= currentUser.username %>'s <br>Discussion</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/user/<%= currentUser._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="input-field-1" type="text" name="comment[text]" placeholder="Your Comment">
                </div>

                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Comment!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

